<%= turbo_frame_tag "modal" do %>
  <div class="relative z-10" aria-labelledby="modal-title" role="dialog" aria-modal="true" data-controller="modal" data-modal-target="modal" data-action="turbo:submit-end->modal#submitEnd">
    <div class="fixed inset-0 bg-slate-500 bg-opacity-80 transition-opacity"></div>
    <div class="fixed inset-0 z-10 overflow-y-auto">
      <div class="flex justify-center p-4 text-center sm:items-center sm:p-0">
        <div data-modal-target="modalContent" class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all my-8 w-full max-w-3xl px-4 py-8">
          <h2 class="h2 text-left">Change Password</h2>
          <%= form_for :user, url: passwords_path, html: { method: :put, class: "space-y-6" } do |f| %>
            <%= render PasswordField::Component.new(
              form: f,
              input_name: :current_password,
            ) %>
            <%= render PasswordField::Component.new(
              form: f,
              input_name: :password,
              input_text: "New Password"
            ) %>
            <%= render PasswordField::Component.new(
              form: f,
              input_name: :current_password,
              input_text: "Confirm New Password"
            ) %>
            <div class="flex flex-col gap-4">
              <%= f.submit "Save", class: "btn btn-primary w-full h-12" %>
              <button
                type="button"
                data-action="click->modal#hideModal"
                class="btn btn-secondary w-full h-12 items-center"
              >
                Cancel
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>