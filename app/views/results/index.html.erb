<div class="flex justify-between items-center h-12">
  <h2 class="h2">Total Winnings</h2>
  <% if user_signed_in? %>
    <%= link_to "Add Result", new_results_path, class: "btn btn-primary h-10 items-center" %>
  <% end %>
</div>
<div class="mt-10 flex flex-col gap-4">
  <% @users.each do |user| %>
    <div class="h-20 px-4 flex justify-between items-center bg-gradient-to-r from-cyan-50 to-sky-50 rounded-lg border border-emerald-400">
      <p class="font-semibold text-slate-700 text-md">
        <%= user.first_name %>
      </p>
      <p class="text-slate-700">
        <%= user.total_winnings %>
      </p>
    </div>
  <% end %>
</div>